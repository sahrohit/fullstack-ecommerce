{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": [],
	"pipeline": {
		"build": {
			"outputs": [
				"dist/**",
				".next/**",
				"!.next/cache/**",
				"build/**",
				"api/**",
				"public/build/**"
			],
			"dependsOn": ["^build"],
			"env": [
				"NODE_ENV",
				"DATABASE_URL",
				"ALLOWED_ORIGINS",
				"REDIS_URL",
				"SESSION_SECRET",
				"PORT",
				"CLIENT_URL",
				"NEXT_PUBLIC_API_URL",
				"KHALTI_SECRET_KEY",
				"NEXT_PUBLIC_GOOGLE_CLIENT_ID"
			]
		},
		"test": {
			"outputs": ["coverage/**"],
			"dependsOn": []
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		},
		"gen-env": {
			"dependsOn": []
		},
		"codegen": {
			"outputs": ["./codegen-outputs/**"]
		},
		"clean": {
			"cache": false
		}
	}
}
