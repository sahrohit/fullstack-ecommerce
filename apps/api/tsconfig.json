{
	"extends": "tsconfig/base.json",
	"compilerOptions": {
		"sourceMap": true,
		"outDir": "dist",
		"removeComments": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"allowSyntheticDefaultImports": true,
		"lib": ["es2021"],
		"module": "commonjs",
		"target": "es2020",
		"rootDir": "src",
		"allowJs": true,
		"checkJs": false
	},
	"paths": {
		"@entities/*": ["entities/*"],
		"@middlewares/*": ["middlewares/*"],
		"@migration/*": ["migration/*"],
		"@resolvers/*": ["resolvers/*"],
		"@static/*": ["static/*"],
		"@utils/*": ["utils/*"]
	},
	"exclude": ["node_modules"],
	"include": [
		"./src/**/*",
		"./src/types.ts",
		"./src/env.d.ts",
		"./src/migrations/*.ts"
	]
}
