{
	"extends": "tsconfig/astro.json",
	"compilerOptions": {
		"baseUrl": "src",
		"jsx": "react-jsx",
		"paths": {
			"@assets/*": ["assets/*"],
			"@config": ["config.ts"],
			"@components/*": ["components/*"],
			"@content/*": ["content/*"],
			"@layouts/*": ["layouts/*"],
			"@pages/*": ["pages/*"],
			"@styles/*": ["styles/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.astro", "./.eslintrc.js"],
	"exclude": ["node_modules"]
}
